<div class="container">
  <div class="row">
    <div class="col">
      <h1 class="m-3 p-2">Real Time Products</h1>
      <h5 class="p-2 m-3">Agregar nuevo producto:</h5>

      <form id="addProductForm" class="m-2 p-2">
        <div class="mb-3">
          <label for="title" class="form-label">Nombre</label>
          <input type="text" class="form-control" id="title" />
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Descripción</label>
          <input type="text" class="form-control" id="description" />
        </div>
        <div class="mb-3">
          <label for="code" class="form-label">Code</label>
          <input type="text" class="form-control" id="code" />
        </div>
        <div class="mb-3">
          <label for="price" class="form-label">Precio</label>
          <input type="text" class="form-control" id="price" />
        </div>
        <div class="mb-3">
          <label for="stock" class="form-label">Stock</label>
          <input type="text" class="form-control" id="stock" />
        </div>
        <div class="mb-3">
          <label for="category" class="form-label">Categoría</label>
          <input type="text" class="form-control" id="category" />
        </div>
        <div>
          <label for="thumbnails" class="form-label"> Url Imagen</label>
          <input type="text" class="form-control" id="thumbnails">
        </div>
        <button type="submit" class="btn btn-primary mt-3">Agregar producto</button>
      </form>

      <h2 class="m-3 p-2">Productos</h2>
      <ul class="list-group m-2 p-2" id="rt-products">
        {{#each realTimeProducts.docs}}
          <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="ms-2 me-auto" id="{{_id}}">
              <div class="fw-bold">Nombre: {{title}}</div>
              <div>
                <b>Descripción:</b>
                {{description}} <br>
                <b>Code:</b>
                {{code}} <br>
                <b>Precio: $</b>
                {{price}} <br>
                <b>Stock:</b>
                {{stock}} <br>
                <b>Categoría:</b>
                {{category}} <br>
                {{#each thumbnails}}
                  <img src="{{this}}" alt="Imagen del producto" class="thumbnail-image-small" >
                {{/each}} <br>
                <button
                  class="delete-button btn btn-primary mt-3"
                  data-product-id="{{_id}}"
                >Eliminar</button>
              </div>

            </div>
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>

<script src="socket.io/socket.io.js"></script>
<script src="js/realTimeProducts.js"></script>