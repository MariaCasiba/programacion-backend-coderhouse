<div class="container-sm">
    <div class="row">
        <div class="col text-center">
            <h1 class="m-3 p-3">Productos</h1>
        </div>
    </div>

    {{#if user}}
        <div class="row">
            <div class="col col-md-9 text-center">
                <p>Bienvenido/a a nuestro E-commerce, <b>{{user.first_name}} {{user.last_name}} </b> - {{user.role}}</p>
            </div>

            <div class="col col-md-3">
                <button type="button" class="btn btn-outline-dark" id="btnLogout">Log Out</button>
                <a href="/profile" class="btn btn-outline-dark ml-2">Ir a Mi Perfil</a>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-9"></div> 
            <div class="col-md-3 text-right"> 
                <a href="/carts/{{user.cartId}}" class="btn btn-dark" >Ir al Carrito</a>
            </div>
        </div>
        
        <div class="row justify-content-center text-center">    
            {{#each products.docs}}
                <div class="col col-md-3 m-3">
                    <div class="card" id="{{this._id}}">
                        <img src="{{this.thumbnails}}" class="card-img-top mx-auto d-block m-2" style="max-width: 180px" alt="{{this.title}}">
                        <div class="card-body text-justify p-2 m-3">
                            <h5 class="card-title m-2 p-3">{{this.title}}</h5>
                            <p class="card-text">Precio: ${{this.price}}</p>
                            <a href="/products/{{this._id}}" class="btn btn-outline-dark text-center m-2">Ver detalle</a>
                            <button type="submit" class="btn btn-dark text-center m-2 addToCartBtn" data-productid="{{this._id}}" >Agregar al carrito</button>
                        </div>
                    </div>                 
                </div>  
            {{/each}}       
        </div>

        <div class="row d-flex">
            <div class="col justify-content-center">
                <nav>
                    <ul class="pagination justify-content-center">
                        {{#if products.hasPrevPage}}
                            <li class="page-item">
                                <a class="page-link" href="/products?page={{products.prevPage}}"><<</a>
                            </li>
                        {{/if}}
                        {{#if products.hasPrevPage}}
                            <li class="page-item">
                                <a class="page-link" href="/products?page={{products.prevPage}}">{{products.prevPage}}</a>
                            </li>
                        {{/if}}
                        <li class="page-item">
                            <a class="page-link">{{products.page}}</a>
                        </li>
                        {{#if products.hasNextPage}}
                            <li class="page-item">
                                <a class="page-link" href="/products?page={{products.nextPage}}">{{products.nextPage}}</a>
                            </li>
                        {{/if}}
                        {{#if products.hasNextPage}}
                            <li class="page-item">
                                <a class="page-link" href="/products?page={{products.nextPage}}">>></a>
                            </li>
                        {{/if}}
                    </ul>
                </nav>
            </div>
        </div>           

        <script src="/js/products.js"></script>

    {{/if}}
</div>

